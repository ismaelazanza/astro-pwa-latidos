<style>
    /* Codigo del boton rojo de en vivo */
    	    .pulse-red-element {
            width: 15px;
            height: 15px;
            background-color: #ff0000; /* Set the base color to red */
            border-radius: 50%; /* Make it a circle */
            animation: pulse-red 2s infinite; /* Apply the animation */
        }
    
        @keyframes pulse-red {
            0% {
                transform: scale(1); /* Initial size */
                box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.7); /* Initial shadow (faint red) */
            }
            70% {
                transform: scale(1.1); /* Slightly larger */
                box-shadow: 0 0 0 15px rgba(255, 0, 0, 0); /* Expanding, fading shadow */
            }
            100% {
                transform: scale(1); /* Return to original size */
                box-shadow: 0 0 0 0 rgba(255, 0, 0, 0); /* Shadow fully faded */
            }
        }
    
    /* Codigo de PopoUp */
    
          /* Fondo del popup */
          #install-popup {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(6px);
            -webkit-backdrop-filter: blur(6px);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            animation: fadeIn 0.4s ease-out forwards;
          }
    
          /* Contenido del popup */
          #install-popup-content {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 12px;
            padding: 2rem;
            max-width: 90%;
            width: 320px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transform: scale(0.8);
            opacity: 0;
            animation: popupIn 0.4s ease-out forwards;
          }
    
          /* Animaciones */
          @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
          }
    
          @keyframes popupIn {
            to {
              transform: scale(1);
              opacity: 1;
            }
          }
    
          /* Botón instalar */
          #install-button {
            background-color: #12171f;
            color: white;
            border: none;
            padding: 4px 15px;
            font-size: 1rem;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.2s ease;
          }
    
          #install-button:hover {
            background-color: #246ad1;
          }
    
          /* Botón cerrar */
          #close-popup {
            margin-top: 1rem;
            background-color: transparent;
            border: none;
            color: #444;
            cursor: pointer;
            text-decoration: underline;
            font-size: 0.9rem;
          }
    
    /* Codigo Slider */
    
        .slider-background {
          position: relative;
          width: 100%;
          height: 100vh;
          overflow: hidden;
        }
    
        .slide {
          position: absolute;
          top: 0; left: 0;
          width: 100%;
          height: 100%;
          background-size: cover;
          background-position: center;
          opacity: 0;
          transform: scale(1); /* Ahora inicia sin zoom */
          transition: opacity 1.5s ease-out, transform 8s ease-out;
          z-index: 0;
          filter: blur(6px); /* Efecto glass */
        }
    
        .slide.active {
          opacity: 1;
          transform: scale(1.2); /* Zoom in */
          z-index: 1;
        }
    
        .overlay {
          position: absolute;
          top: 0; left: 0;
          width: 100%;
          height: 100%;
          background: rgba(0, 0, 0, 0.127); /* Oscurece para contraste */
          z-index: 2;
        }
    
        .slider-content {
          position: absolute;
          top: 0; left: 0;
          width: 100%;
          height: 100%;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          text-align: center;
          z-index: 3;
        }
    
</style>


<script>

  //Codigo POPUP
      let deferredPrompt;

      window.addEventListener('beforeinstallprompt', (e) => {
        e.preventDefault();
        deferredPrompt = e;

        const popup = document.getElementById('install-popup');
        popup.style.display = 'flex';

        const installBtn = document.getElementById('install-button');
        const closeBtn = document.getElementById('close-popup');

        installBtn.addEventListener('click', async () => {
          popup.style.display = 'none';
          deferredPrompt.prompt();
          const result = await deferredPrompt.userChoice;
          console.log('Resultado de instalación:', result.outcome);
          deferredPrompt = null;
        });

        closeBtn.addEventListener('click', () => {
          popup.style.display = 'none';
        });
      });

  //Codigo SLIDER
    const slides = document.querySelectorAll('.slide');
    let current = 0;
    const total = slides.length;
    const duration = 8000; // 8 segundos por slide

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.remove('active');
        if (i === index) {
          slide.classList.add('active');
        }
      });
    }

    function nextSlide() {
      current = (current + 1) % total;
      showSlide(current);
    }

    // Iniciar
    showSlide(current);
    setInterval(nextSlide, duration);


</script>